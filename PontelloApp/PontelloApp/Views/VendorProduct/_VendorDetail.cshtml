@model PontelloApp.Models.Vendor

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="mb-3">@Model.Name</h4>

        <dl class="row mb-0">

            <dt class="col-sm-3">Contact</dt>
            <dd class="col-sm-9">@Model.ContactName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">EIN</dt>
            <dd class="col-sm-9">@Model.EIN</dd>

            <dt class="col-sm-3">Tax Exempt</dt>
            <dd class="col-sm-9">
                @if (Model.IsTaxExempt)
                {
                    <span class="badge bg-success">Yes</span>
                }
                else
                {
                    <span class="badge bg-secondary">No</span>
                }
            </dd>
        </dl>
    </div>
</div>
