@model IEnumerable<PontelloApp.Models.Vendor>


<a asp-action="Index" class="btn btn-secondary mb-3">
    <i class="bi bi-arrow-left"></i> Back to List
</a>

<h1 class="mb-2">Archived Vendors</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No archived vendors found.
    </div>
}
else
{
    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Contact</th>
                <th>Email</th>
                <th>Phone</th>
                <th>EIN</th>
                <th>Tax Exempt</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td><strong>@v.Name</strong></td>
                    <td>@(string.IsNullOrEmpty(v.ContactName) ? "—" : v.ContactName)</td>
                    <td>@(string.IsNullOrEmpty(v.Email) ? "—" : v.Email)</td>
                    <td>@(string.IsNullOrEmpty(v.Phone) ? "—" : v.Phone)</td>
                    <td>@(string.IsNullOrEmpty(v.EIN) ? "—" : v.EIN)</td>
                    <td>
                        @if (v.IsTaxExempt)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}