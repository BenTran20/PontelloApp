@model PontelloApp.Models.Vendor

<div class="mb-3 d-flex justify-content-between align-items-center">
    <partial name="_BackToList" />
</div>

<h1 class="text-danger mb-4">
    Archive Vendor: @Model.Name
</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<p>
    This vendor will be archived and will no longer appear in your active vendor list.
</p>

<form asp-action="Archive" method="post">
    <input type="hidden" asp-for="VendorID" />
    <input type="hidden" asp-for="RowVersion" />


    <div class="row">

        <!-- VENDOR INFO -->
        <div class="col-md-5">
            <div class="card shadow mb-4 border-danger">
                <div class="card-header fw-bold bg-danger-subtle">
                    Vendor Information
                </div>

                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4">Vendor Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Contact</dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrEmpty(Model.ContactName) ? "—" : Model.ContactName)
                        </dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrEmpty(Model.Email) ? "—" : Model.Email)
                        </dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrEmpty(Model.Phone) ? "—" : Model.Phone)
                        </dd>

                        <dt class="col-sm-4">EIN</dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrEmpty(Model.EIN) ? "—" : Model.EIN)
                        </dd>

                        <dt class="col-sm-4">Tax Exempt</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsTaxExempt)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">Active</span>
                            <span class="text-muted ms-2">→ will be archived</span>
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-danger">
            <em class="bi bi-archive"></em> Archive Vendor
        </button>
    </div>
</form>
