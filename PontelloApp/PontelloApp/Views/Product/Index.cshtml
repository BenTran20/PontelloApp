@model IEnumerable<PontelloApp.Models.Product>

@{
    ViewData["Title"] = "Product Lists";
}

<form asp-action="Index" method="get">
    <div class="container mt-4">
        <div class="row mb-3 align-items-center">
            <div class="col-md-6">
                <h3 class="m-0">Product Lists</h3>
            </div>
            <div class="col-md-6">
                <div class="input-group" style="max-width: 300px; float: right;">
                    <label for="search-input" class="visually-hidden">Search</label>
                    @Html.TextBox("SearchString", null, new { @class = "form-control", placeholder = "Search" })
                    <button class="btn btn-outline-secondary" aria-label="Search Button" type="submit">
                        <em class="bi bi-search" aria-label="Search Icon"></em>
                    </button>
                </div>
            </div>
        </div>

        <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
        <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
        <div class="row">
            <!-- FILTER -->
            <div class="col-md-2">
                <div class="card p-3 shadow-sm mt-50">
                    <h4 class="mb-3">Filter @ViewData["numberFilters"]</h4>
                    
                    <div class="mb-2">
                        <p class="mb-2 fw-bold">Sort By:</p>

                        <div class="d-flex gap-3">
                            <button type="submit" name="actionButton" value="A-Z" class="btn btn-outline-primary btn-sm">A-Z</button>

                            <button type="submit" name="actionButton" value="Z-A" class="btn btn-outline-primary btn-sm">Z-A</button>
                        </div>
                    </div>



                    <div class="mb-2">
                        <div class="accordion" id="accordionExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Category
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        @Html.DropDownList("CategoryID", null, "None", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-secondary w-100 btn-sm">Apply</button>
                </div>
            </div>

            <!-- PRODUCT LIST -->
            <div class="col-md-10">
                <div class="d-flex justify-content-end gap-2 mb-3">
                    <a asp-action="Archive" class="btn btn-secondary btn-sm">
                        <em class="bi bi-archive"></em> Archived Products
                    </a>

                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <em class="bi bi-plus-lg"></em> Create New
                    </a>
                </div>

                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card h-100 product-card">
                                <div class="card-body d-flex flex-column">
                                    <p class="mb-2"><strong>Category:</strong> @item.Category.Name</p>
                                    <h5 class="mt-2">@item.ProductName</h5>

                                    <div class="mt-auto d-flex gap-1 flex-wrap mt-15">

                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-addcart btn-sm">
                                            <em class="bi bi-cart3"></em> Shop
                                        </a>
                                        <a asp-controller="AddProductVariant" asp-action="Index" asp-route-id="@item.ID" class="btn btn-success btn-sm">
                                            <em class="bi bi-plus-circle"></em> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-archive btn-sm" title="Archive">
                                            <em class="bi bi-archive"></em> Archive
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <partial name="_PagingNavBar" />
            </div>
        </div>
    </div>
</form>



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
@section Scripts {
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}