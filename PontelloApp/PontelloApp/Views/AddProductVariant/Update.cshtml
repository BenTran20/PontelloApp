@model PontelloApp.Models.ProductVariant

@{
    ViewData["Title"] = "Update Product Variant";
}

<h2>Update Variant for @Model.Product?.ProductName</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProductId" />

    <div class="mb-3">
        <label asp-for="SKU_ExternalID" class="form-label"></label>
        <input asp-for="SKU_ExternalID" class="form-control" />
        <span asp-validation-for="SKU_ExternalID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label"></label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StockQuantity" class="form-label"></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <hr />
    <h4>Options</h4>
    <table class="table table-sm" id="optionsTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Options.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" name="Options[@i].Id" value="@Model.Options.ElementAt(i).Id" />
                        <input type="text" name="Options[@i].Name" value="@Model.Options.ElementAt(i).Name" class="form-control" />
                    </td>
                    <td>
                        <input type="text" name="Options[@i].Value" value="@Model.Options.ElementAt(i).Value" class="form-control" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm removeOptionBtn">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-secondary mb-3" id="addOptionBtn">Add Option</button>

    <div>
        <button type="submit" class="btn btn-primary">Save Variant</button>
        <a asp-action="Index" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <script>
        let optionIndex = @Model.Options.Count;

        document.getElementById('addOptionBtn').addEventListener('click', function () {
            const tbody = document.querySelector('#optionsTable tbody');
            const row = document.createElement('tr');

            row.innerHTML = `
                <td>
                    <input type="hidden" name="Options[${optionIndex}].Id" value="0" />
                    <input type="text" name="Options[${optionIndex}].Name" class="form-control" />
                </td>
                <td>
                    <input type="text" name="Options[${optionIndex}].Value" class="form-control" />
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm removeOptionBtn">Remove</button>
                </td>
            `;

            tbody.appendChild(row);
            optionIndex++;

            row.querySelector('.removeOptionBtn').addEventListener('click', function () {
                row.remove();
            });
        });

        document.querySelectorAll('.removeOptionBtn').forEach(btn => {
            btn.addEventListener('click', function () {
                btn.closest('tr').remove();
            });
        });

        function rebuildOptionIndexes() {
            const rows = document.querySelectorAll('#optionsTable tbody tr');
            rows.forEach((row, idx) => {
                row.querySelectorAll('input').forEach(input => {
                    if (input.name.includes('.Id')) input.name = `Options[${idx}].Id`;
                    if (input.name.includes('.Name')) input.name = `Options[${idx}].Name`;
                    if (input.name.includes('.Value')) input.name = `Options[${idx}].Value`;
                });
            });
        }

        document.querySelector('form').addEventListener('submit', function() {
            rebuildOptionIndexes();
        });

    </script>
}


