@model PontelloApp.Models.Order

@{
    ViewData["Title"] = "Your Cart";
}

<div class="container py-5">

    <h2 class="fw-bold mb-4 d-flex justify-content-between">
        <span>Your Shopping Cart</span>
        <span>@(Model?.Items?.Count() ?? 0) items</span>
    </h2>


    @if (Model == null || !Model.Items.Any())
    {
        <div class="alert alert-light border">
            Your cart is empty.
        </div>
    }
    else
    {
        <div class="row">

            <!-- LEFT SIDE - CART ITEMS -->
            <div class="col-lg-8">

                <div class="row fw-bold border-bottom pb-2 mb-3">
                    <div class="col-md-5">Product</div>
                    <div class="col-md-2 text-center">Price</div>
                    <div class="col-md-3 text-center">Quantity</div>
                    <div class="col-md-2 text-end">Total</div>
                </div>

                @foreach (var item in Model.Items)
                {
                    <div class="card mb-4 shadow-sm border-0">
                        <div class="card-body">
                            <div class="row align-items-center">

                                <!-- Product Info -->
                                <div class="col-md-5">
                                    <h5 class="fw-bold">@item.Product?.ProductName</h5>

                                    @if (item.ProductVariant != null && item.ProductVariant.Options.Any())
                                    {
                                        <small class="text-muted">
                                            @string.Join(" / ", item.ProductVariant.Options.Select(o => $"{o.Name}: {o.Value}"))
                                        </small>
                                    }
                                </div>

                                <!-- Price -->
                                <div class="col-md-2 text-center">
                                    <span class="fw-semibold">$@item.UnitPrice</span>
                                </div>

                                <!-- Quantity -->
                                <div class="col-md-3 text-center">
                                    <form asp-action="UpdateCart" asp-controller="Cart" method="post" class="d-flex justify-content-center">

                                        <input type="hidden" name="id" value="@item.Id" />

                                        <button type="submit"
                                                name="quantity"
                                                value="@(item.Quantity - 1)"
                                                class="btn btn-outline-dark btn-sm">
                                            -
                                        </button>

                                        <input type="text"
                                               value="@item.Quantity"
                                               class="form-control text-center mx-2"
                                               style="width:60px;"
                                               readonly />

                                        <button type="submit"
                                                name="quantity"
                                                value="@(item.Quantity + 1)"
                                                class="btn btn-outline-dark btn-sm">
                                            +
                                        </button>
                                    </form>
                                </div>

                                <!-- Total -->
                                <div class="col-md-2 d-flex justify-content-end align-items-center gap-2" ">
                                    <div class="fw-bold">$@item.TotalPrice</div>

                                    <form asp-action="RemoveItem"
                                          asp-controller="Cart"
                                          method="post"
                                          class="mt-2">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm text-muted">
                                            âœ•
                                        </button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                }

            </div>

            <!-- RIGHT SIDE - SUMMARY -->
            <div class="col-lg-4">

                <div class="card shadow-sm border-0 p-4">

                    <h5 class="fw-bold mb-3">Order Summary</h5>

                    @{
                        var subtotal = Model.Items.Sum(i => i.TotalPrice);
                        var tax = Math.Round(subtotal * 0.13m, 2);
                        var grandTotal = Math.Round(subtotal + tax, 2);
                    }

                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span>$@subtotal</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <span>Sales Tax:</span>
                        <span>$@tax</span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between fs-4 fw-bold mb-4">
                        <span>Grand Total:</span>
                        <span>$@grandTotal</span>
                    </div>

                    <form asp-action="Checkout" asp-controller="Cart" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-dark w-100 py-2">Check Out</button>
                    </form>

                </div>

            </div>

        </div>
    }
</div>
